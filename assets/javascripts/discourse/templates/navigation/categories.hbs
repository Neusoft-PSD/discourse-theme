{{! CHANGE MANIFEST:
= Root: app/assets/javascripts/discourse/templates/navigation/categories.hbs
=
= (1) Added .btn-primary to create category button
= (2) Added a private message button
= (*) Other syntax changes to make it easier to read
=}}

{{bread-crumbs categories=categories}}

<ul class="nav nav-pills" id='navigation-bar'>
  {{#each navItem in navItems}}
    {{navigation-item content=navItem filterMode=filterMode}}
  {{/each}}
  {{custom-html "extraNavItem"}}
</ul>

{{#if canCreateCategory}}
  {{! SP (1) }}
  {{d-button id="create-category" class="btn-default btn-primary" action="createCategory" icon="plus" label="category.create"}}
  {{! /SP }}
{{/if}}

{{! SP (2) }}

  {{#if currentUser}}
    {{d-button id="create-private-message" class="btn-default" action="composePrivateMessage" icon="envelope" label="user.private_message"}}
  {{/if}}

{{! /SP }}

{{#if canCreateTopic}}
  {{d-button id="create-topic" class="btn-default" action="createTopic" icon="plus" label="topic.create"}}
{{/if}}
